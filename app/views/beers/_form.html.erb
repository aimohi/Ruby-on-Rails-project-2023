<%= form_with(model: beer) do |form| %>
  <% if beer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(beer.errors.count, "error") %> prohibited this beer from being saved:</h2>

      <ul>
        <% beer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <label for="beer_name" class="form-label">Name</label>
    <%= form.text_field :name, class: "form-control", id: "beer_name" %>
  </div>

  <div>
    <label for="beer_style_id" class="form-label">Style</label>
    <%= form.select :style_id, options_from_collection_for_select(@styles, :id, :name), {}, {class: "form-control", id: "beer_style_id"} %>
  </div>

  <div>
    <label for="beer_brewery_id" class="form-label">Brewery</label>
    <%= form.select :brewery_id, options_from_collection_for_select(@breweries, :id, :name), {}, {class: "form-control", id: "beer_brewery_id"} %>
  </div>
<br>
  <div>
    <%= form.submit "Create beer", class:'btn btn-primary' %>
  </div>
<% end %>
