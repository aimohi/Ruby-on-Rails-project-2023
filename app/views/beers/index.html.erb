<h1>Beers</h1>

<div id="beers">
  <table class="table table-hover">
  <thead>
   <th>Beer</th>
   <th>Style</th>
   <th>Brewery</th>
   <th>Rating</th>
 </thead>
 <% @beers.each do |beer| %>
   <tr>
     <td><%= link_to beer.name, beer %></td>
     <td><%= Style.find_by_id(beer.style_id).name %></td>
     <td><%= link_to beer.brewery.name, beer.brewery %></td>
     <td><%= beer.average_rating %></td>
   </tr>
 <% end %>
</table>

<%= link_to "Breweries", breweries_path, class:'btn btn-primary' %>

<%= link_to('New Beer', new_beer_path, class:'btn btn-primary') if current_user %>