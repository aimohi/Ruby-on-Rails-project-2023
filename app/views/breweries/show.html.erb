<p style="color: green"><%= notice %></p>

<% cache @brewery do %>
<%= render @brewery %>

<h3>Beers</h3>

<div id="beers">
    <table class="table table-striped  table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Style</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
  <% @beers.each do |beer| %>
    <tr>
      <td><%= link_to beer.name, beer %></td>
      <td><%= Style.find_by_id(beer.style).name %></td>
      <td><%= beer.average_rating %></td>
    </tr>
  <% end %>
    </tbody>
  </table>
  </div>

<% end %>

<div>
  <%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), data: {turbo_method: "post"}, class: "btn btn-primary" %>
  <%= edit_and_destroy_buttons(@brewery) %>
  <%= link_to "Back to breweries", breweries_path %>
</div>
